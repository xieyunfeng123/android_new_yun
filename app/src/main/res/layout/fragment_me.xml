<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@mipmap/me_top">

                <com.ityun.zhihuiyun.view.CircleTextView
                    android:id="@+id/user_image"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/main_color"
                    android:textSize="22sp"
                    app:borderColor="@color/white"
                    app:borderWidth="2dp"
                    app:fillColor="@color/white" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="70dp"
                    android:layout_toRightOf="@+id/user_image"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/me_videoback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/list_selector_item"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/layout_10dp"
                    android:src="@mipmap/me_change_psd" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="视频回传"
                    android:textColor="#666666"
                    android:textSize="@dimen/text_15sp" />

                <ImageView
                    android:layout_width="@dimen/layout_15dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/layout_10dp"
                    android:src="@mipmap/personal_arrows" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                android:background="@color/alertdialog_line"
                 />

            <LinearLayout
                android:id="@+id/me_da"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/layout_1dp"
                android:background="@drawable/list_selector_item"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/layout_10dp"
                    android:src="@mipmap/me_pic" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="数据采集"
                    android:textColor="#666666"
                    android:textSize="@dimen/text_15sp"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/tv_clarity"
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/layout_15dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="480P"
                    android:textColor="@color/bg_sort_color"
                    android:textSize="@dimen/text_14sp"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="@dimen/layout_15dp"
                    android:layout_height="@dimen/layout_25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/layout_10dp"
                    android:src="@mipmap/personal_arrows" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                android:background="@color/alertdialog_line"
                 />

            <LinearLayout
                android:id="@+id/me_command"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/list_selector_item"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/layout_10dp"
                    android:src="@mipmap/me_change_psd" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="指挥调度"
                    android:textColor="#666666"
                    android:textSize="@dimen/text_15sp" />

                <ImageView
                    android:layout_width="@dimen/layout_15dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/layout_10dp"
                    android:src="@mipmap/personal_arrows" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                android:background="@color/alertdialog_line"
                />

            <LinearLayout
                android:id="@+id/me_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/layout_1dp"
                android:background="@drawable/list_selector_item"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/layout_10dp"
                    android:src="@mipmap/me_version" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/banben"
                    android:textColor="#666666"
                    android:textSize="@dimen/text_15sp" />

                <TextView
                    android:id="@+id/app_version"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/layout_15dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/bg_sort_color"
                    android:textSize="@dimen/text_14sp" />

                <!--<ImageView-->
                <!--android:layout_width="@dimen/layout_15dp"-->
                <!--android:layout_height="@dimen/layout_25dp"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:layout_marginRight="@dimen/layout_10dp"-->
                <!--android:src="@mipmap/personal_arrows" />-->
                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/bg_sort_color"
                    android:textSize="@dimen/text_14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                android:background="@color/alertdialog_line" />

            <LinearLayout
                android:id="@+id/me_sysSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/layout_1dp"
                android:background="@drawable/list_selector_item"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:src="@mipmap/setting" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/sys_setting"
                    android:textColor="#666666"
                    android:textSize="@dimen/text_15sp" />

                <ImageView
                    android:layout_width="@dimen/layout_15dp"
                    android:layout_height="@dimen/layout_25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/layout_10dp"
                    android:src="@mipmap/personal_arrows" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                android:background="@color/alertdialog_line" />

            <Button
                android:id="@+id/exitSys"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_50dp"
                android:layout_margin="@dimen/layout_30dp"
                android:background="@drawable/button_main_bg"
                android:text="@string/exit"
                android:textColor="@color/white"
                android:textSize="@dimen/text_17sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>