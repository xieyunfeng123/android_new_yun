<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/black"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_mute"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:background="@color/black">

                <ImageView
                    android:id="@+id/iv_mute"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/mute" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_mute"
                    android:layout_centerInParent="true"
                    android:text="静音"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_marginLeft="50dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_camera"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/mute" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_camera"
                    android:layout_centerInParent="true"
                    android:text="摄像头"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_hf"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_marginLeft="160dp">

                <ImageView
                    android:id="@+id/iv_hf"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/speaker" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_hf"
                    android:layout_centerInParent="true"
                    android:text="扬声器"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">


            <RelativeLayout
                android:id="@+id/rl_invite"
                android:layout_marginTop="15dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_message"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/call_addpeople" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_message"
                    android:layout_centerInParent="true"
                    android:text="邀请"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/refuse"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="@dimen/layout_10dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/jieshu" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_marginLeft="50dp">

                <ImageView
                    android:id="@+id/iv_narrow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/narrows" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_narrow"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:text="收起"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>