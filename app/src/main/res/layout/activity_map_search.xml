<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/time_bg">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:src="@mipmap/groupinfo_bark"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>

        <com.ityun.zhihuiyun.view.ClearEditText
            android:id="@+id/et_keyWord"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_back"
            android:layout_marginLeft="@dimen/layout_15dp"
            android:layout_marginRight="@dimen/layout_15dp"
            android:shadowColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <ListView
        android:id="@+id/ls_showPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>