<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/talk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/voice"
                android:layout_width="@dimen/layout_55dp"
                android:layout_height="@dimen/layout_55dp"
                android:layout_weight="0.50"
                android:background="@drawable/chat_panel_bg"
                android:src="@mipmap/voice" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_3dp"
                android:gravity="center"
                android:text="语音"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pic"
                android:layout_width="@dimen/layout_55dp"
                android:layout_height="@dimen/layout_55dp"
                android:background="@drawable/chat_panel_bg"
                android:src="@mipmap/chat_extra_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_3dp"
                android:gravity="center"
                android:text="图片"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/location_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/location"
                android:layout_width="@dimen/layout_55dp"
                android:layout_height="@dimen/layout_55dp"
                android:background="@drawable/chat_panel_bg"
                android:src="@mipmap/position" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_3dp"
                android:gravity="center"
                android:text="位置"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_talk_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sharemore_sight"
                android:layout_width="@dimen/layout_55dp"
                android:layout_height="@dimen/layout_55dp"
                android:background="@drawable/chat_panel_bg"
                android:src="@mipmap/sharemore_sight" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_3dp"
                android:gravity="center"
                android:text="对讲"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12sp" />
        </LinearLayout>


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip">

        <LinearLayout
            android:id="@+id/teamViewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/file"
                android:layout_width="56dp"
                android:layout_height="@dimen/layout_55dp"
                android:layout_weight="0.50"
                android:background="@drawable/chat_panel_bg"
                android:src="@mipmap/position" />

            <TextView
                android:id="@+id/tv_yuyin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_3dp"
                android:gravity="center"
                android:text="远程协助"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/strong_pull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
           >

            <ImageView
                android:layout_width="@dimen/layout_55dp"
                android:layout_height="@dimen/layout_55dp"
                android:layout_weight="0.50"
                android:background="@drawable/chat_panel_bg"
                android:src="@mipmap/voice" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_3dp"
                android:gravity="center"
                android:text="强拉"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_paiZhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/layout_55dp"
                android:layout_height="@dimen/layout_55dp"
                android:layout_marginTop="@dimen/layout_10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_3dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"

            >

            <ImageView
                android:layout_width="@dimen/layout_55dp"
                android:layout_height="@dimen/layout_55dp"
                android:layout_marginTop="@dimen/layout_10dp" />

            <TextView
                android:id="@+id/tv_files"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_3dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12sp" />
        </LinearLayout>

    </TableRow>

</TableLayout>